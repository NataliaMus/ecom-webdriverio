{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "."
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "node_modules/@wdio/globals/types.d.ts"
  ],
  "exclude": ["node_modules"]
}
